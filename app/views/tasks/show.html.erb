<h1><%=@task.title%></h1><br>

<p><%= @task.details %></p><br>

<% if @task.completed %>
  <% task_status = "x" %>
  <% task_status_details = "This task is completed" %>
<% else %>
  <% task_status = " " %>
  <% task_status_details = "This task is not completed yet" %>
<% end %>

<p>[<%= task_status %>] <%= task_status_details %></p><br>

<%= link_to "Edit this task", edit_task_path %>
<br>
<br>

<%= link_to "Delete this task", #COULD ALSO "Delete #{@task.title}"
  task_path(@task),
  method: :delete,
  data: { confirm: "Are you sure ?" } %>

<br>
<br>
<%= link_to "Back to list", tasks_path %>
