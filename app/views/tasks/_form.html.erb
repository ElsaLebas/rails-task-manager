<!-- USING bootstrap simple form -->
<%= simple_form_for(task) do |f| %>
  <%= f.input :title %>
  <%= f.input :details %>

  <% unless f.object.new_record? %>
    <%= f.input :completed %>
  <% end %>

  <%= f.submit %>
<% end %>

